<div class="user-cover-avatar">
    <img src="{% if user[0]['avatar']!= null %}/files/user/avatar/{{ user[0]['avatar'] }}{% else %}/images/system/no-profile-pic.png{% endif %}" width="40px" class="uk-background uk-background-default">
</div>
<div class="uk-width-expand">
    <div>
        <a class="uk-text-small uk-text-muted" href="{{ path('web_user_profile', { 'id' : user[0]['id'] }) }}">
            {{ user[0]['firstName'] }} {{ user[0]['lastName'] }}
        </a>
    </div>
    <p class="uk-text-meta uk-margin-remove-top"><time datetime="{{ messageCreatedAt|date('H:i Y m d') }}">{{ messageCreatedAt|date('H:i M d Y') }}</time></p>
</div>
{#{% set cover = '/images/user-default-bg.jpg' %}#}
{#{% if user.cover is not null %}#}
{#    {% set cover = user.cover|style_image('1280_300_crop') %}#}
{#{% endif %}#}
<div class="uk-container user-cover uk-background-cover" data-src="{% if user.cover != null %}/files/user/cover/{{ user.cover }}{% else %}/images/user-default-bg.jpg{% endif %}" uk-img>
    <div class="uk-section uk-section-xsmall">
        <div uk-grid class="uk-flex-center user-cover-grid">
            <div class="uk-width-medium ">
                <ul class="uk-list uk-list-striped uk-background-default uk-text-center">
                    <li>{{ 'FOLLOWING'|trans }}<br>
                        <span class="uk-text-large">
                            <a href="{{ path('web_user_list_following', {'id': user.id}) }}">
                                {{ following }}
                            </a>
                       </span>
                    </li>
                    {% if (user != app.user)  %}
                        <li>
                            <span class="uk-text-large">
                              <a href="{{ path('web_user_dialogues_list', { 'id': user.id }) }}">
                                    <img src="{{ asset('images/message_icon.jpg') }}" width="80px" class="uk-margin-small-right">
                              </a>
                            </span>
                        </li>
                    {% else %}
                        <li>
              <span class="uk-text-large">
                <a href="{{ path('web_user_dialogues_list') }}" style="text-decoration: none">
                    <img src="{{ asset('images/message_icon.jpg') }}" width="80px" class="uk-margin-small-right">
                    {{ render(controller('App\\Controller\\Web\\BlockController::numberAllUnReadMessages')) }}
                </a>
              </span>
                        </li>
                    {% endif %}
                </ul>
            </div>
            <div class="uk-width-medium">
                <div class="user-cover-avatar">
                    <img src="{% if user.avatar != null %}/files/user/avatar/{{ user.avatar }}{% else %}/images/system/no-profile-pic.png{% endif %}" width="200px" class="uk-background uk-background-default">
                </div>
                <div class="uk-background-muted uk-margin-small-top uk-padding-small">
                    <h4 class="uk-margin-remove-bottom">{{ user.firstName }} {{ user.LastName }}</h4>
                </div>
            </div>
            <div class="uk-width-medium">
                <ul class="uk-list uk-list-striped uk-background-default uk-text-center">
                    <li>{{ 'FOLLOWERS'|trans }}<br>
                        <span class="uk-text-large">
                            <a href="{{ path('web_user_list_followers', {'id': user.id}) }}">
                                {{ followers }}
                            </a>
                        </span>
                    </li>
                    <li>{{ 'TWITTERS'|trans }}<br>
                        <span class="uk-text-large">
                            {{ twitters }}
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
